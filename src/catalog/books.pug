extends layout 
block content 
	table
		thead
			tr
				td Title
				td Author
				td Genre
				td ISBN 
				td Summary
		tbody 
			for book in books
				tr
					td #{book.title}
					td #{book.author.name}
					td 
						for genre in book.genre 
							span #{genre.name},
					td #{book.isbn}
					td #{book.summary}
	form(action="", method="post") 
		label Title
			input(type="text", name="title")
		label Author
			input(type="text", name="author")
		label Genre
			input(type="text", name="genre")
		label ISBN
			input(type="text", name="isbn")
		label Summary
			textarea(name="summary") 
		button(type="submit") Add new book